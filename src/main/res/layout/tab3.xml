<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="50dip"
            android:layout_weight="0"
            android:background="#e5f8ff"
            android:orientation="vertical">

            <!--<TextView-->
            <!--android:text="Select Type"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_width="40dp"-->
            <!--/>-->



            <EditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="   Summarizer Configuration for Article Name "/>




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="390dp"
            android:orientation="vertical">

            <android.support.v7.widget.Toolbar
                android:id="@+id/tablayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.Toolbar>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="390dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <EditText

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="   Option1 "
                    android:layout_weight="1"
                    />

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/dropdown1"

                    style="@android:style/Widget.Holo.Light.Spinner"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@+id/action_setting"

                    android:layout_weight="1"
                    android:entries="@array/type_names">


                </android.support.v7.widget.AppCompatSpinner>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="390dp"
                android:layout_weight="1"

                android:orientation="horizontal">
                <EditText

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:text="   Option2 "/>
                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/dropdown2"

                    style="@android:style/Widget.Holo.Light.Spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/action_setting"
                    android:layout_weight="1"
                    android:entries="@array/type_names">


                </android.support.v7.widget.AppCompatSpinner>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="390dp"
                android:layout_weight="1"

                android:orientation="horizontal">
                <EditText

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:text="   Option3 "/>

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/dropdown3"

                    style="@android:style/Widget.Holo.Light.Spinner"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:layout_toRightOf="@+id/action_setting"

                    android:layout_weight="1"
                    android:entries="@array/type_names">


                </android.support.v7.widget.AppCompatSpinner>
            </LinearLayout>



        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <Button

                android:id="@+id/submit"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Submit" />

            <Button
                android:id="@+id/back"

                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:text="Back" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>

